{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "semi": "off",
    "max-len": ["error", { "code": 150 }],
    "jsx-a11y/anchor-is-valid": "off",
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": [
        "server.js",
        "next.config.js"
      ]
    }]
  }
}
