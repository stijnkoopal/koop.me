{
  "name": "koopal.me",
  "version": "1.0.0",
  "main": "pages/index.js",
  "license": "MIT",
  "author": "Stijn Koopal",
  "dependencies": {
    "emotion": "^9.1.2",
    "next": "^5.1.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-emotion": "^9.1.2"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.3",
    "@storybook/react": "^3.4.2",
    "@storybook/addon-actions": "^3.4.2",
    "@storybook/addon-links": "^3.4.2",
    "@storybook/addons": "^3.4.2",
    "babel-core": "^6.26.0",
    "babel-runtime": "^6.26.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.jsx?"
    ],
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/.storybook/",
      ".stories.js$"
    ]
  },
  "scripts": {
    "build": "next build && next export",
    "dev": "next",
    "lint": "eslint . --fix --ext js,jsx --ignore-path .gitignore",
    "start": "next start",
    "test": "jest --coverage",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  }
}
